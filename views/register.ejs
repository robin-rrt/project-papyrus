    <body>
        
        <nav class="navbar navbar-expand-lg bg-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <img src="/images/papyrus-logo-transparent.png" alt="" class="img">
                    </li>
            </ul>
        </nav>
        <div class="container">
            
                <div class="reg_form">
                    <form method="post" action="/login">
                        <legend class="mb-4">REGISTER</legend>
                        <hr class="mb-4">
                        <label for="" class="form-label">Admission no</label>
                        <input type="text" name="admisson_no" id="admission_no" class="form-control mb-2">
                        <label for="" class="form-label">Name</label>
                        <input type="text" name="name" id="full_name" class="form-control mb-2">
                        <label for="" class="form-label">Phone number</label>
                        <input type="text" name="phone_number" id="phone_number" class="form-control mb-2">
                        <label for="" class="form-label">College Email</label>
                        <input type="email" name="email" id="email" class="form-control mb-2">
                        <label for="" class="form-label">Password</label>
                        <input type="password" name="password" id="password" class="form-control mb-2">
                        <label for="" class="form-label">Branch</label>
                        <input type="text" name="branch" id="branch" class="form-control mb-2">
                        <label for="" class="form-label">Semester</label>
                        <input type="text" name="semester" id="semester" class="form-control mb-2">
                        <a href='javascript:;' class="btn btn-success mt-2" onclick="register()">
                                Register
                        </a>
                        <a href='/login' class="btn btn-secondary mt-2">
                            Back to Login
                    </a>
                    </div>
                </form>
        </div>
    </body>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
